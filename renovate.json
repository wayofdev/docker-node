{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "packageNames": [
                "pnpm"
            ],
            "manager": "ansible",
            "fileMatch": [
                "src/group_vars/all\\.ya?ml$"
            ],
            "updateTypes": [
                "semver"
            ],
            "datasourceTemplate": "ansible",
            "datasourceArgs": {
                "fileMatch": "src/group_vars/all.yml",
                "section": "vars",
                "key": "pnpm_version"
            }
        }
    ]
}
